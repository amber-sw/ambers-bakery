---
import Hero from './Hero.astro';
---

<div>
	<Hero></Hero>
	<main>
	</main>

</div>

<style>

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 70%;
		z-index: 0;
		filter: blur(8px);
		-webkit-filter: blur(8px);
	}
	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: space-around;
		width: 100%;
		background-size: cover;
		background-position: center;
		padding: 32px 0;
	}

	h1 {
		font-weight: lighter;
		color: var(--darkColor);
		font-size: 72px;
	}


	@media screen and (max-height: 368px) {
		#news {
			display: none;
		}
	}

	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			display: block;
			padding-top: 10%;
		}

		#links {
			flex-wrap: wrap;
		}

		#links a.button {
			padding: 14px 18px;
		}

	}
</style>
