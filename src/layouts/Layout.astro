---
import logo from '../assets/logo_notext.png';


const backgroundColor = "#fef8ec";
const lightColor = "#cf9d44";
const mediumColor = "#8e530f";
const darkColor = "#784010";
const accentColor = "#8f8848";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Yrsa:ital,wght@0,300..700;1,300..700&display=swap" rel="stylesheet">

		<meta name="generator" content={Astro.generator} />
		<title>Amber's Bakery</title>
	</head>
	<body>
		<!-- <nav>
			<a href="/pricelist">Prijslijst</a>
			<a href="/"><img class="navbar__logo" src={logo.src} width="115" /></a>
			<a href="/contact">Contact</a>
		</nav> -->
		<article>
			<slot />
		</article>
	</body>
</html>

<style is:global define:vars={{ lightColor, mediumColor, darkColor, accentColor, backgroundColor }}>
	@font-face {
		font-family: 'Milkshake';
		src: url('/fonts/milkshake.otf') format('otf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: var(--backgroundColor);
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
	}

	h1 {
		font-family: 'Milkshake', sans-serif;
	}

	nav {
		display: flex;
		justify-content: center;
		gap: 15vw;
		align-items: center;
	}

	nav a {
		text-decoration: none;
	}

	.navbar__logo {
		border-radius: 50%;
	}

	*{
		font-family: "Yrsa", serif;
		font-optical-sizing: auto;
		font-weight: 400;
		font-style: normal;
	}
</style>
